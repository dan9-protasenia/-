#include <stdio.h>
#include <string.h>
#include <ctype.h>
 
int main()
{
    char str[100], word[20], mn[20], c;
    int i = 0, j = 0, flg = 0;
 
    printf("Enter string: ");
    i = 0;
    do
    {
        fflush(stdin);
        c = getchar();
        str[i++] = c;
    } while (c != '\n');
    str[i - 1] = '\0';
 
    for (i = 0; i < strlen(str); i++)
    {
        while (i < strlen(str) && !isspace(str[i]) && isalnum(str[i]))
        {
            word[j++] = str[i++];
        }
        if (j != 0)
        {
            word[j] = '\0';
            if (!flg)
            {
                flg = !flg;
                strcpy(mn, word);
            }
            if (strlen(word) < strlen(mn))
            {
                strcpy(mn, word);
            }
            j = 0;
        }
    }
    printf("The shortest word is '%s'\n", mn);
    return 0;
}
