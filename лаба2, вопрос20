#include <stdio.h>   // Ввожу библиотеки 
#include <string.h> 
#include <stdlib.h> 
#include <locale.h> 
int main()
{
	setlocale(LC_ALL, "russian"); //  Добавляю русификатор 
	char s[] = "asdw  gsdfsd asdwed grsd ss  ";   // Строка в которой ищется самое короткое слово
	int i, min = 0, j, k; // Вводятся переменные 
	for (i = 0, k = 1; i < strlen(s); i++) {  //  Начало операции 
		if (s[i] != ' ' && s[i - 1] == ' ') {

			j = i;
			
		}
		if (s[i] != ' ' && s[i - 1] != ' ') {

			k++;
			if (k < min) {

				min = k;
			}
			if (s[i] == ' ') {


				k = 0;
			}
			i++;
		}
	}
	printf("%d", min);  // Выводим мин слвов
}
