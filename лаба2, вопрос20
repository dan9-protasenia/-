#include <stdio.h>               // Ввожу стандартнеы библиотеки
#include <string.h>
#include <locale.h>
#define N 256                   // Вводим директив

int Slovo(char *ps)
{
  char d[]=" .,;:!?\n\r\t";
  char *pd;
  for( pd = d; *pd; pd++)
  if(*ps == *pd)return 0;
  return 1;
}

int main ( void )
{
 setlocale(LC_ALL,"RU");
char a[N]="asdw,  gsdfsd asdwed grsd ss";
    int i, minc;
    char *n, *t, *min;
    t = a;
    i = 0; minc = 30;
  while(*t)
  {
    i = 0;
    if(Slovo(t) && *t)
    { 
      n = t;
      while(Slovo(t) && *t){i++; t++;}
      if(minc > i){minc = i; min = n;}
    } else t++;
  }
    for (i = 1; i <= minc; i++)printf("%c", *min++);
    puts("");
    return 0;
}
